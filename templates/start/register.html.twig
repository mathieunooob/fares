{% extends 'base.html.twig' %}

{% block title %} Inscription {% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href=" {{ asset('css/styleRegister.css') }} ">
{% endblock %}

{%  block body %}
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
          <div class="d-flex">
            <div class="flex-column">
              <h1>Page d'inscription</h1>
              <p> Remplissez ces informations et bénéficiez d'un compte pour gérer vos documents et leurs signatures numériques </p>
            </div>
            <div class="flex-row mx-auto">
              <img class="flex-wrap" src="./img/tp.png" alt="logo" style="width: 75px; height: 45px"/>
            </div>
          </div>
        </div>
    </div>
    <div class="container">
        <form>
            <div class="form-group row">
                <label for="username" class="col-12 col-md-8 offset-md-2">Nom :</label>
                <input class="form-control form-control-lg col-12 col-md-8 offset-md-2" type="text" id="username" placeholder="Nom" />
            </div>
            <div class="form-group row">
                <label for="firstname" class="col-12 col-md-8 offset-md-2">Prénom :</label>
                <input class="form-control form-control-lg col-12 col-md-8 offset-md-2" type="text" id="firstname" placeholder="Prénom" />
            </div>
            <div class="form-group row">
              <label for="email" class="col-12 col-md-8 offset-md-2">Adresse mail :</label>
              <input class="form-control form-control-lg col-12 col-md-8 offset-md-2" type="email" id="email" aria-describedby="emailHelp" placeholder="Mail" />
              <small id="emailHelp" class="form-text text-muted col-12 col-md-8 offset-md-2">Nous ne partagerons pas votre adresse.</small>
            </div>
            <div class="form-group row">
                <label for="password" class="col-12 col-md-8 offset-md-2">Mot de passe :</label>
                <input class="form-control form-control-lg col-12 col-md-8 offset-md-2" type="password" id="password" placeholder="Mot de passe" />
            </div>
            <div class="form-group row">
                <label for="verifPassword" class="col-12 col-md-8 offset-md-2">Confirmation mot de passe :</label>
                <input class="form-control form-control-lg col-12 col-md-8 offset-md-2" type="password" id="verifPassword" placeholder="Confirmez mot de passe" />
            </div>
            <div class="row justify-content-center">
                <a href="# {#{{ path('home') }}#} " class="btn btn-primary btn-lg mt-4 mb-2 btn-block w-50 col-12 col-md-8 offset-md-2" role="button">
                    Créer
                </a>
                <a href="{{ path('start') }}" class="btn btn-danger btn-lg mt-4 mb-2 btn-block w-50 col-12 col-md-8 offset-md-2" role="button">
                    Annuler
                </a>
            </div>
        </form>
    </div>

{% endblock %}
